<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back55"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="MainActivity">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/next_img"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/next_img"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/prev_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/prev_img" />

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"></android.support.v4.view.ViewPager>


    <ImageView
        android:id="@+id/fab"
        android:layout_width="60dp"
        android:src="@drawable/play_img"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
         />


</RelativeLayout>
